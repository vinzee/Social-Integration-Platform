<% if @fb %>
 <!-- -----------------------------------Me (Personal Details)----------------------------------------- -->

<h4> Profile </h4>

<%  fb_me = @fb.get_object("me",:date_format => 'U') %>
<%# fb_me.each do |z,v| %>
  <%# z %>
<%# end %>
<% pic = @fb.get_picture("me",:type => 'large',:date_format => 'U' ) %>

<div class="row-fluid box">
    <div class="span6">
        <% if pic %>
          <center>
            <%= image_tag pic,:class => 'img-polaroid' %><br>
          </center>
        <% end %>
    </div>
    <div class="span4">
        <br><br>
        <b><%= fb_me['name'] %></b> <small class="grey">( <%= fb_me['username'] %> )</small><br>
        <% if fb_me['location'] %>
         @ <%= fb_me['location']['name'] %><br>
        <% end %>
         <%= fb_me['gender'] %>
         <% if fb_me['relationship_status'] %>
          , <%= fb_me['relationship_status'] %><br>
        <% end %>
        
        <br>
        <% if fb_me['birthday'] %>
          <b>Born on</b> <i><%= fb_me['birthday'] %></i>
        <% end %>

        <% if fb_me['hometown'] %>
        , <i><%= fb_me['hometown']['name'] %></i><br>
        <% end %>

      <% if fb_me['email']%>
        <b>Email :</b> <%= fb_me['email'] %><br>
      <% end %>

      <%= link_to truncate(fb_me['link'],:length => 60), fb_me['link'],:target => '_blank' %><br>

    </div>
</div>
<br><br>
<div class="row-fluid box">
    <div class="span6 offset1">
    <br>
      <% if fb_me['quotes'] %>
      <b>Quotes :</b><br> <i><%= fb_me['quotes'] %></i><br><br>
      <% end %>

      <% if fb_me['work'] %>
       <b>Work :</b> 
       <% fb_me['work'].each do |f| %>
        <%= f['position']['name'] if f['position']%> @ <%= f['employer']['name'] if f['employer']%>,   
      <% end %><br><br>
      <% end %>

      <% if fb_me['favorite_teams'] %>
      <b>Favorite teams : </b><br>
      <% fb_me['favorite_teams'].each do |f| %>
        <%= f['name']%>, 
      <% end %><br><br>
      <% end %>

      <% if fb_me['favorite_athletes'] %>
       <b>Favorite athletes :</b><br>
       <% fb_me['favorite_athletes'].each do |f| %>
        <%= f['name']%>, 
      <% end %><br><br>
      <% end %>

      <% if fb_me['inspirational_people'] %>
       <b>Inspirational people : </b><br>
       <% fb_me['inspirational_people'].each do |f| %>
        <%= f['name']%>, 
      <% end %><br><br>
      <% end %>
    
    </div>
    <div class="span4">
      <% if fb_me['education'] %>
      <h6>Schools :</h6>
      <% i = 0 %>
      <% fb_me['education'].each do |f|%>
                <%= i=i+1 %>. <%= f['school']['name'] %><br>
              <% end %>
      <% end %>            
    </div>
</div>

    

    
    

  <div class="row-fluid box">
    <div class="span5 offset1">
    <h6>Extras :</h6>
    <% if fb_me['language'] %>
      Languages:<% fb_me['languages'].each do |f|%>
                <%= f %><br>
                <% end %>
    <% end %>                       

     Verified : <i><%= fb_me['verified'] %></i><br>
      Time zone : <i><%= fb_me['timezone'] %></i><br>
      Locale : <i><%= fb_me['locale'] %></i><br>
      Updated Time : <i><%= Time.at(fb_me['updated_time']).to_formatted_s(:short) %></i><br>
    </div>
  </div>
  <br>
<% end %>


<!-- ---------------------------------Friends--------------------------------------- -->

<% if @fb %>
 
 <h4> Friendlist </h4>

 <%    friends = @fb.get_connections("me", "friends")  %>

<% i = 0 %>

<table class="table" id="fb-friendlist">

  <thead>
    <tr>
      <th>Sr.No.</th>
      <th>Name</th>
      <th>Id</th>
    </tr>
  </thead>
  
  <tbody>
    <% friends.each do |f| %>
      <tr>
        <td><%= i+=1 %></td>
        <td><%= link_to f['name'], {:controller => 'facebook',:action => 'friends_profile', :id => f['id']}  %></td>
        <td><%= f['id'] %></td>  
      </tr>
    <% end %>
  </tbody>
</table>


<script>

  $(document).ready(function(){

    $('#fb-friendlist').dataTable({
      "sDom": "<'row'<'span6'l><'span6'f>r>t<'row'<'span6'i><'span6'p>>",
    "sPaginationType": "bootstrap"
    });

  });

</script>   

<% end %>


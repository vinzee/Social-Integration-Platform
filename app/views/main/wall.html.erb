<div id="status_update" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel">Status Update</h3>
  </div>
  <div class="modal-body">
    <%= form_tag(:action => 'post',:html => { :class => 'form-horizontal' }) do  %>
    	<div class="control-group">
		    <div class="controls">
		    	<center>
		    	<% if @fb && @tw && @li %>
		    	<label class="checkbox inline">
		      		<%= check_box_tag 'all_share' %>All
		      	</label>
		      	<% end %>
		      	<% if @fb %>
		      	<label class="checkbox inline">
		      		<%= check_box_tag 'fb_share' %>Facebook   
		      	</label>
		      	<% end %>
		      	<% if @tw %>
		      	<label class="checkbox inline">
		      		<%= check_box_tag 'tw_share' %>Twitter    
		      	</label>
		      	<% end %>
		      	<% if @li %>
		      	<label class="checkbox inline">
		      		<%= check_box_tag 'li_share' %>Linkedin 
		      	</label>
		      	<% end %>
		      	</center>
		    </div>  
		</div>	
		<br>
	      <div class="control-group">
	      	 <div class="control-label inline">
	      	 	<center>
			      <%= text_area_tag :msg, nil,:size =>"15x4",:maxlength => '140',:placeholder => 'Enter your post' %><br>
			    </center>   
			      <%# hidden_field_tag 'wall', 'group'%>
		     </div>
	      </div>
	      
     	 <div class="row-fluid inline">
     	 	<center>
     	 		<small class="grey inline"><b><div id="msg_size">0 characters</div></b> (max 140)</small>
     	 	</center>
 	 	 </div>
		  
	
  </div>
  <div class="modal-footer">
  	<%= submit_tag "Post", class: "btn btn-primary post_share" %>
    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
  </div>
  <% end %>
</div>

<legend>Sign in</legend>

<div class="row">
  <div class="span8 offset2"><%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => 'form-horizontal' }) do |f| %>

  <div class="control-group"><%= f.label :email,class: 'control-label' %>
  <%= f.email_field :email,class: 'controls', :autofocus => true %></div><br />

  <div class="control-group"><%= f.label :password,class: 'control-label' %>
  <%= f.password_field :password,class: 'controls' %></div><br />

  <% if devise_mapping.rememberable? -%>
    <div class="control-group">
    	<div class="controls">
    		<%= f.label :remember_me,class: 'control-label' do %> 
          <%= f.check_box :remember_me %>
          Remember me
        <% end %>
    	</div>
    </div><br />
  <% end %>
</div>
</div>

  <div><center><%= f.submit "Sign in", :class => 'btn btn-primary btn-large' %></center></div>
<% end %>

<%= render "devise/shared/links" %>
